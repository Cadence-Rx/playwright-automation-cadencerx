  "license": "MIT",
  "devDependencies": {
    "@colors/colors": "^1.6.0",
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "dotenv": "^17.2.3",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "winston": "^3.18.3"
  },
  "scripts": {
    "cucumberTest": "cucumber-js src/features/**/*.feature --require-module ts-node/register --require src/step-definitions/**/*.ts --require src/utils/cucumber-timeouts.ts",
    "loginTest": "cucumber-js src/features/*.feature --require-module ts-node/register --require src/step-definitions/**/**/*.ts --require src/utils/cucumber-timeout.ts --tags @login",
    "precucumber": "rimraf reports && mkdir reports && mkdir reports\\screenshots",
    "cucumber": "npx cucumber-js && ts-node ./src/index.ts"
  }
}
